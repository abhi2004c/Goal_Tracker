FROM node:18-slim

# Install OpenSSL 1.1 and other dependencies
RUN apt-get update && apt-get install -y \
    openssl \
    libssl1.1 \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY prisma ./prisma/

# Install dependencies
RUN npm install

# Generate Prisma client with correct binary target
RUN npx prisma generate

# Copy source code
COPY . .

EXPOSE 5000

CMD ["npm", "start"]